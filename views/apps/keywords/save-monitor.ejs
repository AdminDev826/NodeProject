<div class="modal fade modal-primary" id="saveMonitorModal" aria-hidden="false" aria-labelledby="saveMonitorModalLabel"
                    role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <form class="modal-content" method="POST" id="saveMonitorForm">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span>Ã—</span>
                </button>
                <h4 class="modal-title" id="saveMonitorModalLabel">Save monitor</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12 col-xl-12 form-group">
                        <h5>Current monitor name</h5>
                        <input type="text" class="form-control" name="name" id="name" placeholder="Current monitor name">
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-xl-12 form-group">
                        <hr><h5>Time zone</h5>
                        <input type="checkbox" class="icheckbox-primary" id="timezone" name="timezone"
                            data-plugin="iCheck" data-checkbox-class="icheckbox_flat-blue" checked />
                        <label for="timezone">Automatically detect timezone(GMT-07:00) 
                            <!--
                            <a href="javascript:void(0);">Set Custom</a>
                            -->
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-xl-12 form-group">
                        <hr><h5>Data</h5>
                        <div>
                            <input type="radio" class="icheckbox-primary" id="currentTimeOnwards" name="currentDataType" value="0"
                                data-plugin="iCheck" data-radio-class="iradio_flat-blue" checked />
                            <label for="currentTimeOnwards">Save from current time onwards</label>
                        </div>
                        <div class="m-t-10">
                            <input type="radio" class="icheckbox-primary" id="recentPostOnly" name="currentDataType" value="1"
                                data-plugin="iCheck" data-radio-class="iradio_flat-blue" />
                            <label for="recentPostOnly">Save most recent posts only</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-xl-12 form-group"> 
                        <hr><h5>Keywords</h5>
                        <input type="text" class="form-control" data-plugin="tokenfield" name="keywords" id="keywords" value="<%= locals.keywords %>"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-xl-12">
                        <div class="form-group">
                            <h5>Twitter usernames</h5>
                            <input type="text" class="form-control" data-plugin="tokenfield" name="ttUsernames" id="ttUsernames" />
                        </div>
                        <div class="form-group m-t-10">
                            <h5>Instagram usernames</h5>
                            <input type="text" class="form-control" data-plugin="tokenfield" name="igUsernames" id="igUsernames" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning waves-effect pull-left pause-monitor">Puase</button>
                <button type="button" class="btn btn-success waves-effect pull-left resume-monitor">Resume</button>
                <button type="button" class="btn btn-danger waves-effect pull-left delete-monitor">Delete</button>
                <button type="button" class="btn btn-default btn-pure waves-effect" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary waves-effect save-monitor">Save</button>
            </div>
        </form>
    </div>
</div>