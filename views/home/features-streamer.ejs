<% include ../html/html_begin %>
<% include ../html/head_begin %>
  <meta name="description" content="Streamer">
  <link rel="stylesheet" href="/css/index.css">
  <title>Streamer</title>
<% include ../html/head_end %>
<% include ../html/body_begin %>

<% include ../home/components/navbar %>
<% include ../home/components/menubar %>

  <div class="site-body">


    <!-- Hero -->
    <section class="site-hero hero hero-light padding-top-80"
    style="background-image:url(/img/home/features-streamer.jpg)">
      <div class="container">
        <div class="content">
          <h1>Streamer</h1>
          <h3 class="white">Customized real time intelligence</h3>
        </div>
      </div>
    </section>
    <!-- End Hero -->

    <!-- Feature -->
    <section class="section section-feature section-primary text-center">
      <div class="container container-fluid">
        <p class="section-title"><%= appdata.product %>’s streamer is a
          personalized dashboard that allows you to combine multiple
          monitors into a real time data feed that prioritizes the
          information you need to see most.</p>
      </div>
    </section>
    <!-- End Feature -->

    <section class="section">
      <div class="container">

        <div class="row">
          <div class="col-lg-5 col-md-6 col-sm-12">
            <h3 class="section-title">Track</h3>
            <p class="section-desc">Set monitors to track
              multiple keywords and locations in real time to actively
              search for threats and minimize your response time.
            </p>
          </div>
          <div class="col-lg-offset-1 col-md-6 col-sm-12 hidden-xs">
            <img src="/img/home/features-sm-1.jpg" alt="">
           </div>
        </div>

      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="row">
          <div class="col-lg-5 col-lg-offset-1 col-md-6 col-sm-12 pull-right">
            <h3 class="section-title">Target</h3>
            <p class="section-desc">Refine your monitors’
              results by sentiment, keyword or location to target only the information you need most.
            </p>
           </div>
          <div class="col-md-6 col-sm-12 pull-left hidden-xs">
            <img src="/img/home/features-sm-2.jpg" alt="" class="pull-right">
           </div>
         </div>
       </div>
     </section>

     <section class="section">
       <div class="container">

         <div class="row">
           <div class="col-lg-5 col-md-6 col-sm-12">
             <h3 class="section-title">Personalize</h3>
             <p class="section-desc">Personalize your dashboard to
               view multiple monitors at once and streamline the threat detection
               process across all channels.
             </p>
           </div>
           <div class="col-lg-offset-1 col-md-6 col-sm-12 hidden-xs">
             <img src="/img/home/features-sm-3.jpg" alt="">
            </div>
         </div>

       </div>
     </section>

     <% include ../home/components/request_demo %>
     <% include ../home/components/request_case_study %>

  </div>

<% include ../home/components/footer_home %>
<% include ../home/components/contact_form %>

