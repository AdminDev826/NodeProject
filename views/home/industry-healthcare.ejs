<% include ../html/html_begin %>
<% include ../html/head_begin %>
  <meta name="description" content="Healthcare Security Solutions by <%= appdata.product %> Digital Risk Management">
  <link rel="stylesheet" href="/css/index.css">
  <title>Healthcare Security Solutions by <%= appdata.product %> Digital Risk Management</title>
<% include ../html/head_end %>
<% include ../html/body_begin %>

<% include ../home/components/navbar %>
<% include ../home/components/menubar %>

  <div class="site-body">


    <!-- Hero -->
    <section class="site-hero hero hero-light padding-top-80"
    style="background-image:url(/img/home/industry-healthcare.jpg)">
      <div class="container">
        <div class="content">
          <h1>Patient care has never been so powerful</h1>
          <h3 class="white"><%= appdata.product %> for healthcare providers</h3>
        </div>
      </div>
    </section>
    <!-- End Hero -->

    <!-- Feature -->
    <section class="section section-feature text-center">
      <div class="container container-fluid">
        <p class="section-desc text-left font-size-24">With <%= appdata.product %>, patient care is more informed than ever. From
          maximizing positive interactions every day to deploying more efficient teams in
          an emergency, <%= appdata.product %> powers better hospitals. </p>
      </div>
    </section>
    <!-- End Feature -->


    <!-- Feature -->
    <section class="section section-feature section-small text-center section-primary">
      <div class="container container-fluid">
        <div class="row feature-group">
          <div class="col-sm-12 col-md-4 iconbox iconbox-left">
            <i class="icon iconbox-icon wb-mobile"></i>
            <div class="iconbox-content">
              <h4 class="iconbox-title">Compare Sites</h4>
              <p>Visualize where people are talking about you and your competitors.
              </p>
            </div>
          </div>
          <div class="col-sm-12 col-md-4 iconbox iconbox-left">
            <i class="icon iconbox-icon wb-cloud"></i>
            <div class="iconbox-content">
              <h4 class="iconbox-title">Track Patient Sentiment</h4>
              <p>Flag experiences from disgruntled patients and prevent lawsuits.
              </p>
            </div>
          </div>
          <div class="col-sm-12 col-md-4 iconbox iconbox-left">
            <i class="icon iconbox-icon wb-check"></i>
            <div class="iconbox-content">
              <h4 class="iconbox-title">Respond to Crisis</h4>
              <p>Geofence any area to build a real time map of the crisis.
              </p>
            </div>
          </div>
        </div>

      </div>
    </section>
    <!-- End Feature -->


    <section class="section">
      <div class="container">

        <div class="row">
          <div class="col-lg-5 col-md-6 col-sm-12">
            <h3 class="section-title">Access and analyze global data</h3>
            <h5 class="section-desc">Deploy <%= appdata.product %> in any location or worldwide to access exactly the data you need.</h5>
            <ul class="text-left">
              <li>
                Aggregate sentiment trends to pinpoint problem areas
              </li>
              <li>
                Create monitors for ongoing insights
              </li>
              <li>
                Track competitor performance and influencer opportunities
              </li>
            </ul>
          </div>
          <div class="col-lg-offset-1 col-md-6 col-sm-12 hidden-xs">
            <img src="/img/home/industry-hl-1.jpg" alt="">
           </div>
        </div>

      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="row">
          <div class="col-lg-5 col-lg-offset-1 col-md-6 col-sm-12 pull-right">
            <h3 class="section-title">Discover and analyze threats instantly</h3>
            <h5 class="section-desc">Let the public become your on-site observer. Be the
              first to know about any problem on any site with localized social media auditing</h5>
            <ul class="text-left">
              <li>
                Geofence worksites to target relevant data
              </li>
              <li>
                Set automated alerts to reduce response time
              </li>
              <li>
                Highlight potential threats instantly with natural language processing
              </li>
            </ul>
           </div>
          <div class="col-md-6 col-sm-12 pull-left hidden-xs">
            <img src="/img/home/industry-hl-2.jpg" alt="" class="pull-right">
           </div>
         </div>
       </div>
     </section>

     <section class="section">
       <div class="container">

         <div class="row">
           <div class="col-lg-5 col-md-6 col-sm-12">
             <h3 class="section-title">Tackle crises with maximum efficiency</h3>
             <h5 class="section-desc">Use social data as your eyes and ears on the ground to coordinate response teams and administer care</h5>
             <ul class="text-left">
               <li>
                 Build a visual map of a situation as it unfolds
               </li>
               <li>
                 Review social data in real time to track developments
               </li>
               <li>
                 Use natural language processing to flag posts from individuals in need of aid
               </li>
             </ul>
           </div>
           <div class="col-lg-offset-1 col-md-6 col-sm-12 hidden-xs">
             <img src="/img/home/industry-hl-3.jpg" alt="">
            </div>
         </div>

       </div>
     </section>

     <% include ../home/components/request_demo %>
     <% include ../home/components/request_case_study %>

  </div>

<% include ../home/components/footer_home %>
<% include ../home/components/contact_form %>

<script src="/js/global/global.js"></script>
<script src="/js/index.js"></script>
<% include ../html/body_end %>
